@using ViewModels

@{
    ViewBag.Title = "CreateCity";
    Layout = "~/Views/Shared/_RazvanLivadariuAppLayout.cshtml";
}

<div class="w-50 m-auto">
    <form method="post" id="createCityForm">
        
        <div class="form-group">
            <label>Name</label>
            <input id="cityNameInput" name="Name" class="form-control" />
          
        </div>
        <div class="form-group">
            <label>County</label>
            <select id="cityCounty" class="form-control">
                @foreach (CountyViewModel countyModel in ViewBag.Counties)
                {
                    <option value="@countyModel.Id">@countyModel.Name</option>
                }
            </select>
        </div>

        <input type="submit" value="Save" class="btn btn-success" />
        <a href="@Url.Action("CitiesList", "Cities")" class="btn btn-danger">Cancel</a>
    </form>
</div>

@section Scripts{
    <script src="~/Scripts/appscripts/city-create.js"></script>
}
